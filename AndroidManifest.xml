<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.step_counter">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <!--    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />-->
<!--    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>-->

<!--    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="false" />-->
<!--    <uses-feature android:name="android.hardware.sensor.stepcounter" android:required="false" />-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="StepCounter"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.example.step_counter.service.App">
        <activity android:name="com.example.step_counter.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.step_counter.ui.HeartBeatActivity"
            android:label="Measure"
            android:parentActivityName="com.example.step_counter.ui.MainActivity">
        </activity>

        <service android:name="com.example.step_counter.service.StepDetectorService"
            android:label="StepCounter"/>
    </application>

</manifest>